package javaBasic2.ch05.sec03;

import java.util.Calendar;

public class 열거형예제 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Week today = null; //today는 week라는 열거형의 변수
		
		Calendar cal = Calendar.getInstance(); //날짜를 사용할 수 있다.
		
		int week = cal.get(Calendar.DAY_OF_WEEK);
		
		System.out.println(week);
		
		System.out.println(Week.TUESDAY);  //열거형에 규정하지 않은 데이터를 넣으면 에러
		
		
		switch(Week) {
		case 1 : today = Week.SUNDAY; break;
		case 2 : today = Week.MONDAY; break;
		case 3 : today = Week.TUESDAY; break;
		case 4 : today = Week.WENDESDAY; break;
		case 5 : today = Week.TURSEDAY; break;
		case 6 : today = Week.FRIDAY; break;
		case 7 : today = Week.SATURDAY; break;
		
		}
		
		

	}

}
