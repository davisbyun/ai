<%@ page import="dao.ProductRepository" %>
<%@ page import="dto.Product" %>
<%@ page import="java.util.*" %>

<%--1단계 모든 정보 가져오기, 2단계 보여주기 --%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>orderConfirmation.jsp 주문정보 페이지 영수증 보이기</title>
