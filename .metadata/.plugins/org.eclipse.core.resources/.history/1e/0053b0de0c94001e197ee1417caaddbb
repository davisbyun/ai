package javaBasic2.ch05.sec02;

public class 배열연습 {

	public static void main(String[] args) {
		// 배열 : 동일(타입)한 자료들의 집합, 연속해서 저장되어 있다.
		// 배열을 쓰는 이유? 정수 100개를 기억해야 한다면 변수 100개를 만들어서 써야함. 배열로 선언한다
		// 배열 만드는 방법 1,2,3차원
		
		
		//1차원 배열 
		//방법1)배열에 값을 넣으면서 배열 만들기
		int[] arr = new int[] {1,2,3,4,5};
		String[] sArr = new String[] {"a","b"};
		double[] dArr = new double[] { 1.1, 2.2, 3.3 };
		boolean[] bArr = new boolean [] {true, false};
		byte[] byteArr = new byte[] {1,2,3};
		short[] shortArr = new short[] {6,7};
		float[] floatArr = new float[] {1.1f, 2.2f};
		
		// arr 배열의 [0]의 값 1을 출력하려면?
		System.out.println(arr[0]);
		
		//b출력하기
		System.out.println(sArr[1]);
		
		//3.3출력
		System.out.println(dArr[2]);
		
		//arr 배열의 [0]값 1을 10으로 변경
		arr[0] = 10;
		System.out.println(arr[0]);
		
		
		//방법2) 빈 배열을 만들고 나중에 값을 넣기
		int[] intArr = new int[3];
		double[] doubleArr2 = new double[5];
		
		
		intArr[0] = 3;
		intArr[1] = 5;
		intArr[2] = 7;
	
		//문자열 4개를 만들 빈배열 만들기
		
		String[] StrArr = new String[4];
		
		StrArr[0] = "a";
		StrArr[1] = "b";
		StrArr[2] = "c";
		StrArr[3] = "d";
		System.out.println(StrArr[0]);
		
		
		//반복문을 사용해 1~100까지 배열을 만들기
		
		int[] intArr3 = new int[100];
		for(int i = 1; i<100; i++) {
			intArr3[i] = i+1;
		}
		for(int i = 1; i<100; i++) {
			System.out.print(intArr3[i]+ "  ");
		} 		
			
		int[] intArr10 = null; //null 주소 미지정, 힙메모리 주소의 초깃값으로 설정
		
		int[] score = new int[] {100,90,87,90,100};
		int sum = 0;
		for(int i = 0; i<5; i++) {
			sum += score[i];
		}
		
		int avg = sum/5;
		System.out.println("합계는? " + sum);
		System.out.println("평균은? " + avg);
		System.out.println(score.length );

		// score[3] = 60; 정상 
		// score[4] = 90; 정상
		// score[5] = 60; 에러 
		// score[6] = 90; 에러  배열은 길이를 늘이거나 타입을 변경할 수 없다.
		
		
		String[] season = {"Spring","Summer","Fall","Winter"};
		
		System.out.println("season[0] :" + season[0]);
		System.out.println("season[1] :" + season[1]);
		System.out.println("season[2] :" + season[2]);
		System.out.println("season[3] :" + season[3]);
		
		
		season[1] = "여름";
		System.out.println("season[1] :" + season[1]);
		System.out.println();
		
		int[] scores = {83, 90, 87};
		int sum1 = 0;
		for(int i= 0; i<3; i++) {
			sum1 += scores[i];
			
		}
		
		System.out.println("총합 : " + sum1);
		double avg1 = (double)sum1 /3;
		System.out.println("평균 : " + avg1);
		
		//p171
		String[] names = new String[30];  //문자의 초기화는 null
		//p173 데이터초기값 참고

		System.out.println(names.length);
		//names.length = 23; 배열의 길이는 바꿀 수 없음. 컴파일 에러 발생
		
		
		//성적표 만들기
		//이름  점수
		//홍길동 100
		//김수진 90
		//이경주 85
		
		
		String[] names2 = {"홍길동","김수지","이경주"};
		int[] scores2 = {100,90,85};
		
		for(int i = 0; i < names2.length; i++) {
			System.out.println(name2[i] + "  " +scores2[i]);
			
		}
		
		
		
	}

}

