package t01.ch01.sec01;

import java.util.Scanner;

public class 학생점수분석 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		
		int menu = 1; //선택변수
		int schoolCount; //학생수
		int point //점수입력
		
		while(menu != 5) {		//메뉴가 5가 아니면 종료 
			
			System.out.println("----------------------------------------------------");
			System.out.println("1. 학생수 | 2. 점수입력 | 3. 점수리스트 | 4. 분석 | 5. 종료 ");
			System.out.println("----------------------------------------------------");
			System.out.println("선택>");
			menu = sc.nextInt();
			
			switch (menu) {
			case 1 : System.out.println("학생수");
					 schoolCount = sc.nextInt();	
					 break;
					 
			case 2 : System.out.println("점수입력");
			 		 schoolCount = sc.nextInt();	
			 break; 
			case 3 :
			case 4 : 
			case 5 : System.out.println("프로그램종료" );
			default : System.out.println("선택수는 1~5중에 입력해주세요");	
		}
		
	}

	}}
